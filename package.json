{
	"name": "statusbar-quotes",
	"displayName": "StatusBar Quotes",
	"description": "Here's a heart-warming sentence to soothe your weary mind from programming...",
	"icon": "assets/speech-balloon-ms.png",
	"version": "0.4.0",
	"publisher": "kim-sardine",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"statusbar quote",
		"statusbar",
		"quotes",
		"good quotes",
		"wise saying"
	],
    "repository": {
        "type": "git",
        "url": "https://github.com/kim-sardine/statusbar-quotes"
	},
	"bugs": {
		"url": "https://github.com/kim-sardine/statusbar-quotes/issues",
		"email": "kim-sardine@gmail.com"
	},
	"license": "SEE LICENSE IN LICENSE.md",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"title": "StatusBar Quotes",
			"properties": {
				"statusbar-quotes.category": {
					"type": "string",
					"default": "Wise Saying",
					"enum": [
						"Wise Saying",
						"Programming"
					],
					"enumDescriptions": [
						"Get it together!",
						"May the Force be with you.."
					]
				},
				"statusbar-quotes.language": {
					"type": "string",
					"default": "English",
					"enum": ["English", "Korean"]
				},
				"statusbar-quotes.display-seconds": {
					"type": "number",
					"default": 10,
					"enum": [5, 10, 20, 30, 40, 50, 60],
					"description": "How many seconds do you want the quote to change?"
				}
			}
		},
		"commands": [
			{
				"command": "statusbar-quotes.change-language",
				"title": "Change language",
				"category": "StatusBar Quote"
			},
			{
				"command": "statusbar-quotes.change-category",
				"title": "Change category",
				"category": "StatusBar Quote"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
